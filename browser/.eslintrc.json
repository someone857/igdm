{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-undef":[
            "off"
        ],
        "no-unused-vars":[
            "off"
        ],
        "keyword-spacing":[
            "error"
        ],
        "space-before-function-paren": [
            "error",
            "always"
        ],
        "space-before-blocks": [
            "error",
            "always"
        ],
        "comma-spacing": [
            "error",
            { 
              "before": false,
              "after": true 
            }
        ],
        "space-in-parens": [
            "error", 
            "never"
        ],
        "no-console":[
            "error"
        ],
        "no-var":[
            "error"
        ],
        "arrow-spacing":[
            "error", 
            { 
              "before": true,
              "after": true 
            }
        ]
    }
}
